<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>CodeGame</display-name>
  
  <!-- ===============Servlets=============== -->
  
  <!-- Acceuil -->
  <servlet>
  	<servlet-name>Acceuil</servlet-name>
  	<servlet-class>servlets.Acceuil</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Acceuil</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <!-- Options -->
  <servlet>
  	<servlet-name>Parametres</servlet-name>
  	<servlet-class>servlets.Parametres</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Parametres</servlet-name>
  	<url-pattern>/options</url-pattern>
  </servlet-mapping>
  
  <!-- Mode de Jeu -->
  <servlet>
  	<servlet-name>ModesDeJeu</servlet-name>
  	<servlet-class>servlets.ModesDeJeu</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>ModesDeJeu</servlet-name>
  	<url-pattern>/modesdejeu</url-pattern>
  </servlet-mapping>
  
  <!-- Mode challenger -->
  <servlet>
  	<servlet-name>Challenger</servlet-name>
  	<servlet-class>servlets.Challenger</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Challenger</servlet-name>
  	<url-pattern>/challenger</url-pattern>
  </servlet-mapping>
  
  
  <!-- ===============Taglibs=============== -->
  
  <jsp-config>
  	<jsp-property-group>
		<url-pattern>*.jsp</url-pattern>
		<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
	</jsp-property-group>
  </jsp-config>
  
</web-app>